#include <stdio.h>

int main() {
    
    int vector[10];
   for (int i = 0;i<=9;i++){
       
       printf("\nEL VALOR DE i: %d", i);
    printf("\nINGRESE LA NOTA DE LA MATERIA : ");
    scanf("%d", &vector[i]);
   }
   for(int i = 0;i<9;i++){
     printf("\nLA NOTA DE LA MATERIA ES:%d es %d",i+1,vector[i]);
     
     for(int i = 0;i<9;i++){
     
     if ((1<=vector[i])&&(vector[i]<=3)){
           vector[i] = 2;
     }
     if ((4<=vector[i])&&(vector[i]<=6)){
            vector[i] = 6;
     }        
       if ((vector[i]==7)||(vector[i]==8)){
           vector[i] = 8;
       }
   }
   printf("\nNOTAS ACTUALIZADAS");
   for(int i = 0;i<=9;i++){
 printf("\nLA NOTA DE LA MATERIA %d ES %d", i+1,vector[i]);
   }
   }
    return 0;
}
